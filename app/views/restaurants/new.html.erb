<form action="/restaurants/search" method="post">
  <p>City: <input type="text" name="search[location]"></p>
  <p>Cuisine: <input type="text" name="search[term]"></p>
  <p>Number of Results: <input type="text" name="search[limit]" value="5"></p>
  <p><input type="submit" class="btn btn-default" value="Search"></p>
</form>
<br>
<form action="/restaurants" method="post">
  <p>Name: <input type="text" name="restaurant[name]"></p>
  <p>Rating: <input type="text" name="restaurant[rating]"></p>
  <p>Address: <textarea name="restaurant[address]" rows="4" cols="20"></textarea></p>
  <!-- <p>Address: <input type="text" name="restaurant[address]"></p> -->
  <p><input type="submit" class="btn btn-default" value="Create Restaurant"></p>
</form>
