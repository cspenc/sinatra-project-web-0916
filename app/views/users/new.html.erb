<div class="row">
  <div class="col-md-4">
    <form action="/users" class="form-horizontal" method="post">

      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="user[name]" placeholder="Jane Doe">
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" name="user[address]" width="500" placeholder="11 Broadway, New York, NY 10004">
      </div>
      <input type="submit" class="btn btn-default" value="Create">
    </form>
  </div>
  <div class="col-md-8">
  </div>
</div>
