<div class="row">
  <div class="col-md-4">
    <form action="/users/<%= @user.id %>" class="form-horizontal" method="post">
      <input type="hidden" id="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="user[name]" value="<%= @user.name %>">
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" width="500" value="<%= @user.address %>">
      </div>
      <!-- <p>Name: <input type="text" name="user[name]"></p> -->
      <!-- <p>Address: <input type="text" name="user[address]"></p> -->
      <input type="submit" class="btn btn-default" value="Edit User">
    </form>
  </div>
  <div class="col-md-8">
  </div>
</div>

